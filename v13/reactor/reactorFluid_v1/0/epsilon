FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 1e-2;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1e-10;  // Near-zero
    }

    outlet
    {
        type            inletOutlet;    // Or zeroGradient
        inletValue      uniform 1e-5;
        value           uniform 0;
    }

    pipe
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
}

