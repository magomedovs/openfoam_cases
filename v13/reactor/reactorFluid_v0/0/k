FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-1;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1e-10;  // Near-zero to avoid division errors
    }
   
    outlet
    {
        type            inletOutlet;     // Or zeroGradient if no backflow
        inletValue      uniform 1e-5;   // Small value for backflow stability
        value           uniform 0;
    }
 
    pipe
    {
        type            kqRWallFunction;
        value           $internalField;
    }
}

