FoamFile
{
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

patches
{
    sideWalls
    {
        // Name of new patch
        // name sideWalls;

        // Type of new patch
        patchInfo
        {
            type wall;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches ("tube_grib_scaled_out_patch[0-5 7 9]");
    }

    inlet
    {
        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // Construct from zone
        constructFrom patches;
        
        patches (tube_grib_scaled_out_patch6);
    }

    outlet
    {
        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // Construct from zone
        constructFrom patches;
        
        patches (tube_grib_scaled_out_patch8);
    }
}

