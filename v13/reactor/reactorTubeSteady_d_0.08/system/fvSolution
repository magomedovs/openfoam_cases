FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p_rgh.*"
    {
        solver           GAMG;
        tolerance        0;
        relTol           0.05;
        smoother         DICGaussSeidel;
        maxIter          50;
    };

    Phi
    {
        $p_rgh;
    }

    "(U|Yi|h|k|omega).*"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       0;
        relTol          0.1;
        maxIter         20;
    }

    "Ii.*"
    {
        solver              GAMG;
        tolerance           1e-8;
        relTol              0;
        smoother            symGaussSeidel;
        maxIter             3;
        nPostSweeps         1;
    }
}

PIMPLE
{
    nCorrectors     1;
    nNonOrthogonalCorrectors 2;
}

relaxationFactors
{
    fields
    {
        p_rgh           0.3;
        rho             1;
    }

    equations
    {
        U               0.7;
        h               0.7;
        ".*"            0.7;
    }
}


